# OpenWeatherMap API-Schlüssel
# Kostenlos registrieren unter: https://openweathermap.org/api
WEATHER_API_KEY=dein_api_schluessel_hier

# Standort für Wetter (Basel Standardwerte)
WEATHER_CITY=Basel
WEATHER_COUNTRY=CH
WEATHER_LAT=47.5596
WEATHER_LON=7.5886

# Bildwechsel-Intervall in Millisekunden (Standard: 2 Minuten)
IMAGE_CHANGE_INTERVAL=120000

# Anzeigeeinstellungen
LOCALE=de-CH
TIMEZONE=Europe/Zurich

# Server-Port (Standard: 3000)
PORT=3000
